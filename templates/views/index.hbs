{{!< default}}
<div class="container">
	<div class="jumbotron">
        <div>
            <h2>Наши магазины</h2>
            <ul>
        		{{#each shops }}
                    <li><a href='/shops/{{ _id }}'>{{ address }}</a></li>
                {{/each}}
            </ul>
        </div>
        <div>
            <h2>Товары</h2>
            <div class='snipcart-categories'>
				<!-- for each category -->
        		{{#each goods }}
                    <div class='snipcart-item block'>
                        <a href='/goods/{{ _id }}'>
                            <img src='{{ img.[0] }}' />
                            <h3>{{ name }}</h3>
                            {{ desc }}
                            {{ prices.cat1 }} руб.
                        </a>
                    </div>
                {{/each}}
            </div>
        </div>
	</div>
</div>
