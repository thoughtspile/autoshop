{{!< default}}
<div class='snipcart-categories container' style='padding-left: 20px; padding-right: 20px;'>
    <div class='row'>
        <div class='col-sm-6'>
            <div class='gallery'>
                {{#each good.img}}
                    <img src='{{ . }}' />
                {{/each}}
            </div>
        </div>
        <div class='col-sm-6'>
            <h2 style='margin-top: 0'>{{ good.name }}</h2>
            <div>
                {{ good.desc }}
            </div>
            <form class='input-group' method='post'>
                <input type='number' value='1' class="form-control"></input>
                <div class='input-group-btn'>
                    <input type='hidden' name='action' value='add-to-cart'>
                    <button type="submit" class='btn btn-default'>Добавить к заказу</button>
                </div>
            </form>
            <h3>Товар в наличии в магазинах</h3>
            <ul>
        		{{#each present }}
                    <li>
                        <a href='/shops/{{ shopData._id }}'>
                            {{ shopData.address }}
                            <span>{{ qty }}</span>
                        </a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    {{> category parentCategory}}
</div>
