{{!< default}}
<div class="container">
  <style>
    label {
      margin-top: 6px;
    }
  </style>
  <div class='snipcart-categories' style='padding-left: 20px; padding-right: 20px;'>
      <div class='row'>
        <div class='col-md-3'>
          <div class='card'>
            <div class='row'>
              <h2 style='margin-top: 0;'>Товары</h2>
              <fieldset class="form-group form-inline">
                <label class="col-sm-4">Категория</label>
                <div class='dropdown col-sm-8'>
                  <button class="btn btn-default dropdown-toggle" style="width: 100%;" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    {{ activeCategory }}
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    {{#each categories}}
                      <li><a href='pricelist?category={{.}}' value=''>{{.}}</a></li>
                    {{/each}}
                  </ul>
                </div>
              </fieldset>
            </div>

            <form class="row" action="" method="GET">
              <input hidden name="category" value="{{activeCategory}}"></input>
              {{#each filters}}
                <fieldset class="form-group">
                  <label class='col-sm-6'>{{name}}</label>
                  <div class='col-sm-6'>
                    <select class='form-control' name="filter">
                      <option selected value>не важно</option>
                      {{#each values}}
                        <option value="{{id}}" {{#if selected}}selected{{/if}}>
                          {{label}}
                        </option>
                      {{/each}}
                    </select>
                  </div>
                </fieldset>
              {{/each}}
              <div class="" style="text-align: right">
                <button class="btn btn-default">Поиск</button>
              </div>
            </form>
          </div>
        </div>
        <div class='col-md-9'>
        <div id="goods" class='row'>
          {{#pricelistBlocks goods}}
          {{/pricelistBlocks}}
        </div>
      </div>
    </div>
  </div>
</div>
